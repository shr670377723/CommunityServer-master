<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
  <emailProvider id="libero.it">
    <domain>libero.it</domain>
    <domain>iol.it</domain>
    <domain>blu.it</domain>
    <domain>inwind.it</domain>
    <displayName>Libero Mail</displayName>
    <displayShortName>Libero</displayShortName>
    <incomingServer type="imap">
      <hostname>imapmail.libero.it</hostname>
      <port>143</port>
      <socketType>plain</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>popmail.libero.it</hostname>
      <port>110</port>
      <socketType>plain</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.libero.it</hostname>
      <port>25</port>
      <socketType>plain</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </outgoingServer>
    <documentation url="http://aiuto.libero.it/mail/istruzioni/configura-mozilla-thunderbird-per-windows-a11.phtml"/>
    <documentation url="http://aiuto.libero.it/mail/utilizzo-di-un-client/faq/5388.phtml"/>
  </emailProvider>
</clientConfig>
