<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
  <emailProvider id="arcor.de">
    <domain>arcor.de</domain>
    <displayName>Arcor</displayName>
    <displayShortName>Arcor</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.arcor.de</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <!-- also works: <port>143</port> <socketType>STARTTLS</socketType> -->
      <authentication>password-cleartext</authentication>
      <username>%EMAILLOCALPART%</username>
    </incomingServer>
    <incomingServer type="imap">
      <hostname>imap.arcor.de</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILLOCALPART%</username>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop3.arcor.de</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <!-- STARTTLS does *not* work, unlike IMAP -->
      <authentication>password-cleartext</authentication>
      <username>%EMAILLOCALPART%</username>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>mail.arcor.de</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILLOCALPART%</username>
    </outgoingServer>
    <outgoingServer type="smtp">
      <hostname>mail.arcor.de</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILLOCALPART%</username>
    </outgoingServer>
    <documentation url="http://www.arcor.de/hilfe/neu/index.php?aktion=anzeigen&amp;rubrik=040006001&amp;id=181">
      <descr lang="en">Generic settings</descr>
    </documentation>
    <documentation url="http://www.arcor.de/hilfe/neu/index.php?aktion=anzeigen&amp;rubrik=006001003&amp;id=1241">
      <descr lang="en">TB 2.0 settings</descr>
    </documentation>
    <!--
         Sent Folder: SentMail
         Draft Folder: Drafts

         IMAP-Server is a Courier.
      -->
  </emailProvider>
</clientConfig>
